---
import Contactform from "@/components/contactform.astro";
import Container from "@/components/container.astro";
import Sectionhead from "@/components/sectionhead.astro";
import Layout from "@/layouts/Layout.astro";
import { Icon } from "astro-icon/components";
---

<Layout title="Contact">
  <Container>
    <Sectionhead>
      <Fragment slot="title">Contact</Fragment>
      <Fragment slot="desc"
        >We’d love to hear from you — whether it’s a quote, question, or quick
        hello.</Fragment
      >
    </Sectionhead>

    <div class="grid md:grid-cols-2 gap-10 mx-auto max-w-4xl mt-16">
      <div>
        <h2 class="font-medium text-2xl text-gray-400">
          Contact Hampton <span class="text-green-600">Lawn Solutions</span>
        </h2>
        <p class="text-lg leading-relaxed text-gray-400 mt-3">
          Let's get your lawn looking its best. Use the form or reach out
          directly.
        </p>
        <div class="mt-5">
          <div class="flex items-center mt-2 space-x-2 text-white">
            <Icon class="text-green-600 w-4 h-4" name="uil:map-marker" />
            <span>Benton Harbor, MI</span>
          </div><div class="flex items-center mt-2 space-x-2 text-white">
            <Icon class="text-green-600 w-4 h-4" name="uil:envelope" /><a
              href="mailto:hamptonlawnsolutions@gmail.com"
              >hamptonlawnsolutions@gmail.com</a
            >
          </div><div class="flex items-center mt-2 space-x-2 text-white">
            <Icon class="text-green-600 w-4 h-4" name="uil:phone" /><a
              href="tel:+1 (269) 921 0222">+1 (269) 921 0222</a
            >
          </div>
        </div>
      </div>
      <div>
        <Contactform />
      </div>
    </div>
  </Container>
</Layout>
